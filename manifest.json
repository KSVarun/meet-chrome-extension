{
  "manifest_version": 2,

  "name": "Meet",
  "description": "Automate meet actions",
  "version": "1.0",
  "page_action": {
    "default_popup": "src/index/index.html",
    "default_title": "Meet"
  },

  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },

  "content_scripts": [
    {
      "matches": ["https://meet.google.com/*"],
      "js": ["content.js"]
    }
  ],

  "options_page": "src/options/options.html",

  "permissions": ["tabs", "https://meet.google.com/*", "storage"]
}
